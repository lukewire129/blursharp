<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:BlurSharp.Main.UI.Views"
                    xmlns:vtc="clr-namespace:VerticalTabControl.UI.Units;assembly=VerticalTabControl"
                    xmlns:james="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf">
    <DataTemplate x:Key="TabHeader">
        <Grid Width="100">
            <TextBlock Text="{Binding Name}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="TabContent">
        <james:JamesContent Content="{Binding Content}"/>
    </DataTemplate>
    <Style TargetType="{x:Type views:MainContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainContent}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <vtc:VerticalTabControl TabItem="{StaticResource TabHeader}" Background="White"
                                                TabContent="{StaticResource TabContent}" ItemsSource="{Binding ContentModels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>