<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:james="https://jamesnet.dev/xaml/presentation"
    xmlns:views="clr-namespace:BlurSharp.Main.UI.Views" xmlns:units="clr-namespace:BlurSharp.Main.UI.Units">
    <Style TargetType="{x:Type views:MainContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainContent}">
                    <james:JamesGrid Columns="*" Rows="auto, *">
                        <units:Tab ItemsSource="{Binding Tabs}" />
                        <james:JamesRegion RegionName="TabRegion" />
                    </james:JamesGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>