<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:based="clr-namespace:BlurSharp.Project.UI.Units;assembly=BlurSharp.Support"
    xmlns:jaems="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf"
    xmlns:units="clr-namespace:BlurSharp.Project.UI.Units">
    <Style TargetType="{x:Type units:SeedTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:SeedTextBox}">
                    <Border Padding="10">
                        <jaems:JamesGrid Columns="auto, auto, auto" Rows="*">
                            <TextBlock
                                FontSize="16"
                                Foreground="White"
                                Text="Seed" />
                            <based:RoundTextBox Width="500" Margin="10,0" />
                            <CheckBox
                                VerticalAlignment="Center"
                                Content="Generate Debug Symbols"
                                Foreground="White" />
                        </jaems:JamesGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>