<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:james="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf"
    xmlns:units="clr-namespace:BlurSharp.Project.UI.Units">
    <Style TargetType="{x:Type units:DirectoryTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:DirectoryTextBox}">
                    <james:JamesGrid Columns="auto, auto, auto" Rows="*">
                        <Label
                            Width="150"
                            Content="{TemplateBinding Content}"
                            Foreground="White" />
                        <TextBox Width="800" Text="{Binding PathDirectory}" />
                        <Button Command="{Binding SearchCommand}" Width="100" />
                    </james:JamesGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>