<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:based="clr-namespace:BlurSharp.Support.UI.Units;assembly=BlurSharp.Support"
    xmlns:james="https://jamesnet.dev/xaml/presentation"
    xmlns:units="clr-namespace:BlurSharp.Project.UI.Units"
    xmlns:views="clr-namespace:BlurSharp.Project.UI.Views">
    <Style TargetType="{x:Type views:FolderExplorerContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:FolderExplorerContent}">
                    <james:JamesGrid Columns="*" Rows="auto, 1,*">
                        <based:IconLable
                            Command="{Binding OpenDialogCommand}"
                            Content="폴더열기"
                            IconType="FolderOpenOutline" />
                        <Border HorizontalAlignment="Stretch" Background="White" />
                        <units:FolderTreeView ItemsSource="{Binding Files}" />
                    </james:JamesGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>