<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:jaems="https://jamesnet.dev/xaml/presentation"
    xmlns:units="clr-namespace:BlurSharp.Project.UI.Units"
    xmlns:views="clr-namespace:BlurSharp.Project.UI.Views">
    <Style TargetType="{x:Type views:ProjectContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ProjectContent}">
                    <Border
                        Padding="10"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <jaems:JamesGrid Columns="450,1,*" Rows="*">
                            <units:ExplorerComponent />
                            <GridSplitter HorizontalAlignment="Stretch" Background="White" />
                            <jaems:JamesGrid Columns="*" Rows="auto, *">
                                <units:SeedTextBox Margin="10,0,0,5" />
                                <units:FileListBox DataContext="{Binding ObfuscationFile}" />
                            </jaems:JamesGrid>
                        </jaems:JamesGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>