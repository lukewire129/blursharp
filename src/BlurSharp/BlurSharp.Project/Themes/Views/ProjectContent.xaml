<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:jaems="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf"
    xmlns:units="clr-namespace:BlurSharp.Project.UI.Units"
    xmlns:views="clr-namespace:BlurSharp.Project.UI.Views">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/BlurSharp.Project;component/Themes/Units/CommonStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type views:ProjectContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ProjectContent}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <jaems:JamesGrid Columns="*" Rows="auto, auto, auto">
                            <units:DirectoryTextBox
                                Height="30"
                                Content="Base Directory"
                                DataContext="{Binding Base}" />
                            <units:DirectoryTextBox
                                Height="30"
                                Content="Output Directory"
                                DataContext="{Binding Output}" />
                            <jaems:JamesGrid Columns="auto, auto, auto, auto" Rows="*" Height="30">
                                <Label Content="Sed :" Style="{StaticResource TitleLabel}"/>
                                <units:RoundTextBox Width="500"/>
                                <CheckBox VerticalAlignment="Center" Content="Generate Debug Symbols" Foreground="White"/>
                            </jaems:JamesGrid>
                        </jaems:JamesGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>