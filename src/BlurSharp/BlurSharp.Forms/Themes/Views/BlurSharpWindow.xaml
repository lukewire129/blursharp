<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:BlurSharp.Forms.UI.Views"
                    xmlns:based="clr-namespace:BlurSharp.Support.UI.Units;assembly=BlurSharp.Support"
                    xmlns:james="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf">
    <Style TargetType="{x:Type views:BlurSharpWindow}"
           BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="CloseCommand" Value="{Binding CloseCommand}"/>
        <Setter Property="Title">
            <Setter.Value>
                <Border Padding="5">
                    <TextBlock Text="BlurSharp" Foreground="White" FontSize="20" FontWeight="Bold"/>
                </Border>
            </Setter.Value>
        </Setter>
        <Setter Property="Content">
            <Setter.Value>
                <james:JamesRegion RegionName="MainRegion"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>